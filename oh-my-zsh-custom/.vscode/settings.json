            "commandCenter.border": "#3a3a40",
            "commandCenter.foreground": "#d4d4d8",
            "tab.inactiveBackground": "#1f1f21",
            "tab.activeBackground": "#27272a",
            "breadcrumb.background": "#27272a",
            "tab.activeBorderTop": "#34343a",
            "tab.activeBorder": "#27272a",
            "editorGroupHeader.tabsBorder": "#34343a",
            "tab.border": "#1b1b1f",
            "editorGroupHeader.tabsBackground": "#1f1f21",
            "tab.activeForeground": "#d4d4d8",
            "gitDecoration.modifiedResourceForeground": "#a1a1aa",
            "gitDecoration.stageModifiedResourceForeground": "#a1a1aa",
            "gitDecoration.untrackedResourceForeground": "#a1a1aa",
            "gitDecoration.addedResourceForeground": "#a1a1aa",
            "gitDecoration.renamedResourceForeground": "#a1a1aa",
            "gitDecoration.conflictingResourceForeground": "#a1a1aa",

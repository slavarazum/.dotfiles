            "gitDecoration.deletedResourceForeground": "#a1a1aa",
            "gitDecoration.ignoredResourceForeground": "#a1a1aa",
            "gitDecoration.stageDeletedResourceForeground": "#a1a1aa",
            "panel.background": "#27272a",
